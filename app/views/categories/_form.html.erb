<%= render 'shared/errors', obj:@category %>

<div class="row justify-content-center col-11">
  <div class="col-12">
    <%= form_with(model: @category, local: true) do |f| %>

    <div class="form-group row">
      <%= f.label :name, "Category name:",class: "col-2 col-form-label" %>
      <div class="col-10">
        <%= f.text_field :name, class:"form-control shadow p-3 mb-3 bg-white rounded ", placeholder:"Enter a name"%>
      </div>
    </div>

    <div class="form-group row justify-content-end">
      <%= f.submit class:"btn btn-primary btn-lg mr-3 shadow p-3 mb-3 rounded" %>
    </div>
    <% end %>
  </div>
</div>

<div id="return-to-listings">
  <%= link_to '[Cancel and return to categories listing]', @category, class:
  "text-black font-weight-bold " %>
</div>
