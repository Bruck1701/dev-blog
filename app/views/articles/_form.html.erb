
<%= render 'form_error'%>

<%= form_with(model: @article,local: true)   do |f| %>
<p>
  <%= f.label :title %> 
  <br>
  <%= f.text_field :title%>
</p>
<p>
  <%= f.label :content %> 
  <br>
  <%= f.text_area :content %>
</p>
<p>
  Category:
  <br>
  <%= f.select :category_id, Category.all.collect {|x| [x.name,x.id]},{:include_blank => "Select one" } %>
</p>
<p>
<%= f.submit%>
</p>

<% end %>
<br>