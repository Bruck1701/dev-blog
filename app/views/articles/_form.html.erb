
<%= render 'shared/errors', obj:@article %>

<div class="row justify-content-center col-11">
  <div class="col-12">

    <%= form_with(model: @article, local: true)   do |f| %>

      <div class="form-group row">
        <div class="col-2 col-form-label ">Category</div>
          <div class="col-10">
            <!-- <%= f.select :category_id, Category.all.collect {|x| [x.name,x.id]}, {:include_blank => "Select one",:multiple => true, :size =>4 } ,class:"form-control" %> -->
            <% f.label :category %> 
            <%= f.collection_select(:category_ids, Category.all, :id, :name,
                                    {prompt: "Please select a Category - hold ctrl/cmd for multiple selection"},
                                    {multiple: true, class:"custom-select shadow rounded"}) %>
          </div>
      </div>
      
      <div class="form-group row">
        <%= f.label :title, class: "col-2 col-form-label" %> 
        <div class="col-10">
          <%= f.text_field :title, class:"form-control shadow p-3 mb-3 bg-white rounded"%>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :content, class: "col-2 col-form-label" %> 
        <div class="col-10">
          <%= f.text_area :content, rows:10,class:"form-control shadow p-3 mb-3 bg-white rounded"%>
        </div>
      </div>


      <div class="form-group row justify-content-end">
        <%= f.submit class:"btn btn-primary btn-lg mr-3 shadow p-3 mb-3  rounded" %>
      </div>
   
   
    <% end %>
  </div>
 
</div>

   <div id="return-to-listings">
    <%= link_to '[Cancel and return to articles listing]', articles_path, class: "text-black font-weight-bold " %>
    </div>

