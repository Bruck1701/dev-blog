


<div class = "container mt-4">      

   <div class="row justify-content-center align-items-center">
    <div class="card shadow mb-5 bg-white rounded" style="width: 840px;">
            <div class="card-body">
                <h2 class="text-center mt-4", id="card_title"> <%=@article.title %> </h2>
            <div class="text-muted text-right"> <small> Category: <%=@article.category.name%></small></div>
            <hr>
            <blockquote class="blockquote mb-0">
              <p><%= simple_format(@article.content) %></p>
              <footer class="blockquote-footer text-muted text-right">
                  <small>
                    <%= link_to @article.user.username,@article.user %> <br />
                    Created 
                    <%=time_ago_in_words(@article.created_at)%> ago, edited
                    <%=time_ago_in_words(@article.updated_at)%> ago 
                    </small><br />
                    <% if logged_in? && current_user==@article.user %> 
                      <%= link_to "Edit", edit_article_path(@article) %> | 
                      <%= link_to "Delete", article_path(@article),method: :delete, data: {confirm:'Are you sure?'}%>
                    <% end %> 
                </footer>
            </blockquote>
          </div>
    </div>
  </div>

  <div class="mb-4", id="return-to-listings">
    <%= link_to 'Return', articles_path, class: "text-black font-weight-bold mr-4" %>
  </div>

</div>


