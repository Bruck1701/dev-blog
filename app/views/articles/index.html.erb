<div class = "container mt-4">      
  <% @articles.each do |article| %>
    <div class="row justify-content-center align-items-center">
    <div class="card shadow mb-5 bg-white rounded" style="width: 840px;">
          <div class="card-header">          
            <h5 class="card-text text-center" id="card_title"><%= link_to article.title,article_path(article)  %></h5>
            <p class="card-text text-right"><small class="text-muted"> Category: <%=article.category.name%></small></p>
          </div>

          <div class="card-body">
            <blockquote class="blockquote mb-0">
              <p><%= truncate(article.content,length: 180)%></p>
                <footer class="blockquote-footer text-muted text-right"> Created by <%=article.user.username%> <%=time_ago_in_words(article.created_at)%> ago, edited <%=time_ago_in_words(article.updated_at)%> ago 
              <br><%= link_to "Edit", edit_article_path(article) %></td>
              | <%= link_to "Delete", article_path(article),method: :delete, data: {confirm: 'Are you sure?' }%> </footer>
            </blockquote>
          </div>
    </div>
  </div>
  <% end %>
</div>
  
