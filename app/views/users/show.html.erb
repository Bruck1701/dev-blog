<h1 class="text-center mt-4">
  <%= @user.username%>'s profile
</h1>

<%= gravatar_for(@user,size:150, class:"img-circular shadow mx-auto d-block center") %>


<% if logged_in? && current_user==@user %> 
  <div class="text-center mt-4">
    <%= link_to "Change your password", edit_user_path, class: "btn btn-primary"%>
  </div>
<% end %> 

<h3 class="text-center mt-4">Articles</h3>

<div class="flickr_pagination mt-4">
  <%= will_paginate @articles, :container => false %>
</div>

