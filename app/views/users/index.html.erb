
<h1 class="text-center mt-4">Dev Bloggers</h1>
  
<div class="flickr_pagination mt-4">
  <%= will_paginate @users, :container => false %>
</div>

<div class="container mt-4 d-flex justify-content-center">
  <div class="card-deck align-items-center">
  <% @users.each do |user|%> 
    <div class="row justify-content-center align-items-center">
      <div class="card shadow mb-5 bg-white rounded mr-4 h-100 " >
        <div class="card-header" style="width: 18rem;">
          <div class="justify-content-center">
            <%= link_to gravatar_for(user,size:150, class:"img-circular shadow mx-auto d-block center"),user  %>
          </div>  
          <div class="card-body">
              <%=link_to user.username,user%> <br>
              Email: <%= user.email  %> 
              <p>
                <%= pluralize(user.articles.count, "article")%> posted.<br>
                Member since: <%= user.created_at.to_s(:stamp) %> <br>

                <% if current_user.admin? %>
                  <div>
                  <%= link_to "Delete user", user_path(user), class: "btn btn-outline-danger mt-4",
                  method: :delete, data: {confirm: "Are you sure you want to delete the user and all associated articles?"} %> 
                  </div>
                <%end%> 

              </p>
            </div>
        </div>
      </div>
    </div>
  <%end%>
  </div>
  
</div>
  
<div class="flickr_pagination mt-4 mb-4">
    <%= will_paginate @users, :container => false %>
  </div>


