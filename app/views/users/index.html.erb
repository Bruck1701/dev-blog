
<h1 class="text-center mt-4">Dev Bloggers</h1>
  
<div class="flickr_pagination mt-4">
  <%= will_paginate @users, :container => false %>
</div>

<div class="container mt-4 ">

  <% @users.each do |user|%> 
    <div class="row justify-content-center align-items-center">
      <div class="card shadow mb-5 bg-white rounded" >
        <div class="card-header" style="width: 18rem;">
          <div class="justify-content-center">
            <%= link_to gravatar_for(user,size:150, class:"img-circular shadow mx-auto d-block center"),user  %>
          </div>  
          <div class="card-body">
              <%=link_to user.username,user%> 
              <p>
                <%= pluralize(user.articles.count, "article")%> posted.<br>
                Member since: <%= user.created_at.to_s(:stamp) %> 
              </p>
            </div>
        </div>
      </div>
    </div>
  <%end%>
  
</div>
  
<div class="flickr_pagination mt-4 mb-4">
    <%= will_paginate @users, :container => false %>
  </div>


